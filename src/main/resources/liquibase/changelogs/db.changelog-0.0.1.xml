<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">




    <changeSet id="fokin-001" author="fokin">
        <createTable tableName="cities">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="offset" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="fokin-002" author="fokin">
        <createTable tableName="user_profile_avatar">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_name" type="varchar(1000)">
            </column>
            <column name="photo_content" type="LONGVARBINARY">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="bigint">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="fokin-003" author="fokin">
        <createTable tableName="user_profile_data">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="skype" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="user_avatar_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_avatar_id" references="user_profile_avatar(id)"/>
            </column>
            <column name="user_location_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_location_id" references="cities(id)"/>
            </column>
        </createTable>
    </changeSet>

